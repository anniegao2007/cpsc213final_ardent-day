<div style="padding-left:20px">
<h1>Grades</h1>

<div style="float: left; text-align: left">
    <th><h2>Student</h2></th> <br>
    {{#each studentsandgrades}}
        <tr class="grades">
            <td>{{lastname}}, {{firstname}}</td> <br>
        </tr>
    {{/each}}
</div>

<div style="display:inline-block; margin: 0 auto !important; text-align:left;">
    <th><h2>Total Score [to be implemented]</h2></th>
    {{#each points}}
        <td>{{@index}}/{{totalPoints}}</td> 
    {{/each}}
</div>

<div style="display:inline-block; margin: 0 auto !important; text-align:left;">
    <th><h2>Scores for each field [to be implemented]</h2></th>
    {{#each points}}
        <td>{{@index}}/{{totalPoints}}</td> 
    {{/each}}
</div>

<div style="display:inline-block; margin: 0 auto !important; text-align:left;">
    <th><h2>Comments [to be implemented]</h2></th>
    {{#each points}}
        <td>{{@index}}/{{totalPoints}}</td> 
    {{/each}}
</div>
</div>